// 1u is a 8px grid unit. 1u === 8px
$headers = #686868
$colorRed = #ee3333
$textColor = #979797

.root
  justify-content flex-start
  margin-top 5u
  +desktop()
    flex 1
    margin-left 4u
    margin-top 0u

/*  SEARCH DATA */
.searchData
  flex-direction column
  +tablet()
    flex-direction row
    justify-content space-between

.searchResult
  flex-direction column
  +tablet()
    flex-direction row

.found
  color $headers
  font-size 2.1u

.red
  color $colorRed

.sort
  color $headers
  font-size 2.1u
  margin-top 2u
  +tablet()
    margin-top 0u
    margin-left 6u

.dropdown
  color #000000
  font-size 2.1u
  font-weight 300

.icons
  flex-direction row
  margin-top 3u
  +tablet()
    margin-top 0u

.btnIcons
  margin-left 3u

  &.first
    margin-left 0u

.downArrow
  width 12px
  height 12px
  margin-left 2u

.image
  width 20px
  height 20px

/* PRODUCTS */
.cards
  margin-top 5u
  +tablet()
    margin-left -3u
    margin-top 0u
    flex-direction row
    flex-wrap wrap

.card
  margin-left 0u
  margin-top 5u
  min-width = 260px
  max-width = 767px
  +tablet()
    margin-top 6u
    margin-left 3u
    flex 1
    min-width 292px
    max-width 452px
  +wide()
    flex 1
    min-width 130px
    max-width 500px

  &.first
    margin-top 0u
    +tablet()
      margin-top 6u

.photoProduct
  height 59u
  +tablet()
    height 49u
  +desktop()
    height 69u
  +wide()
    height 26u
    

.description
  flex-direction row
  justify-content space-between
  margin-top 2u

.name
  color $headers
  font-size 1.6u
  text-transform uppercase

.category
  color $headers
  font-size 1.5u
  margin-top 3px

.price
  color $colorRed
  font-size 1.6u
  
.saleBlock
  position absolute
  margin-top 2u
  margin-left 2u  
  background #626262
  padding 4px 10px

.sale
  color #ffffff
  text-transform uppercase
  font-size 1.6u