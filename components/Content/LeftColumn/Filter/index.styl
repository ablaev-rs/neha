// 1u is a 8px grid unit. 1u === 8px
$headers = #686868
$textColor = #979797

.root
  justify-content flex-start

.header
  color $headers
  font-size 2.1u
  margin-top 5u
  
  &.first
    margin-top 0u
    
/* FILTER */
.filterBlock
  margin-top 3u

.filter
  height 4px
  background #B7B7B7

.filterData
  flex-direction row
  justify-content space-between
  margin-top 3u

.lemma
  color $headers
  font-size 1.5u
