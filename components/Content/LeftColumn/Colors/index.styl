// 1u is a 8px grid unit. 1u === 8px
$headers = #686868
$textColor = #979797

.root
  justify-content flex-start
  margin-top 5u

.header
  color $headers
  font-size 2.1u
  
/* COLORS */
.colorsBlock
  flex-direction row
  margin-top 3u

.colors
  margin-left 2u
  
  &.first
